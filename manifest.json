{
  "manifest_version": 2,

  "name": "Better Spent",
  "description": "Keeps track of your browsing time on marked websites daily, historically, and socially.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_popup": "index.html"
  },
  "icons": { 
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png" 
  },
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage", 
    "alarms"
  ]
}
